@using Microsoft.AspNetCore.Components
@inherits BaseMatTooltip

@if (!Wrap)
{
    if (ChildContent != null)
    {
        @ChildContent(TargetForwardRef)
    }
}
else
{
    <div class="mat-tooltip-wrapper" @ref="TargetForwardRef.Current">
        @if (ChildContent != null)
        {
            @ChildContent(TargetForwardRef)
        }
    </div>
}

<div class="@ClassMapper.Class" @ref="Ref" style="@Style">
    @if (TooltipContent != null)
    {
        @TooltipContent
    }
    else
    {
        @Tooltip
    }
</div>

@functions
{
}